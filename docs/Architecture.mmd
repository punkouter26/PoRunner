C4Context
    title Banana Game - System Context (Azure Deployment)
    Person(player, "Player", "Uses Banana Game in browser")
    System_Boundary(b1, "Banana Game Platform") {
        Container(client, "Frontend Client", "Vite + JavaScript", "Renders game canvas, manages UI state")
        Container(server, "Game Server", ".NET 10 / SignalR", "Session management, game state sync")
        Container(storage, "Static Assets", "CDN / Blob Storage", "Character sprites, animations, metadata")
        Container(db, "Game Sessions", "In-Memory State", "Active rooms, player data, game progress")
    }
    System_Ext(azure, "Azure Infrastructure", "App Service, SignalR Service, Storage, Monitor")
    Rel(player, client, "Interacts via WebSocket & HTTP")
    Rel(client, server, "Sends input, receives state via SignalR")
    Rel(server, storage, "Reads sprite/animation metadata")
    Rel(server, db, "Manages session state")
    Rel(server, azure, "Logs to Application Insights")
    Rel(client, storage, "Loads character sprites & animations")
    Rel(storage, azure, "Hosted on Azure Storage")
