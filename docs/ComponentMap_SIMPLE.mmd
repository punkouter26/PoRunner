flowchart TD
    subgraph Frontend["Frontend"]
        canvas["Canvas Render"]
        ui["UI States"]
        input["Input Events"]
    end
    
    subgraph Backend["Backend"]
        hub["SignalR Hub"]
        mgr["Session Manager"]
    end
    
    canvas --> ui
    input --> hub
    hub --> mgr
    mgr --> hub
    canvas --> hub
    
